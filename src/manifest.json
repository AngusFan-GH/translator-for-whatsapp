{
    "manifest_version": 2,
    "name": "WhatsApp Translator",
    "version": "1.1.3",
    "description": "A translator for WhatsApp",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "translate",
        "default_icon": {
            "19": "icons/19_off.png",
            "38": "icons/38_off.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "css": [
                "content/content.css"
            ],
            "js": [
                "content/content.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "http://scrm-web.cn.utools.club/*"
            ],
            "js": [
                "content/login.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "https://web.whatsapp.com/*"
        ]
    },
    "options_ui": {
        "page": "./options/options.html",
        "open_in_tab": true,
        "chrome_style": false
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],
    "web_accessible_resources": [
        "content/wapi.js",
        "content/contact.js"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}